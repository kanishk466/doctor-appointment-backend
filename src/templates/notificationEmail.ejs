<!-- views/emails/appointment-confirmation.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Appointment Confirmation</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }
        .container {
            max-width: 600px;
            margin: 20px auto;
            padding: 20px;
        }
        .header {
            background-color: #2c3e50;
            color: white;
            padding: 20px;
            text-align: center;
            border-radius: 10px 10px 0 0;
        }
        .content {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 0 0 10px 10px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }
        .confirmation-icon {
            font-size: 48px;
            color: #27ae60;
            text-align: center;
            margin: 20px 0;
        }
        .appointment-details {
            background-color: #f8f9fa;
            padding: 20px;
            margin: 20px 0;
            border-radius: 5px;
        }
        .important-notes {
            background-color: #e1f5fe;
            padding: 20px;
            margin: 20px 0;
            border-radius: 5px;
        }
        .footer {
            text-align: center;
            margin-top: 20px;
            padding: 20px;
            background-color: #f1f1f1;
            border-radius: 5px;
        }
        .button {
            display: inline-block;
            padding: 10px 20px;
            background-color: #2196f3;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            margin: 10px 0;
        }
        table {
            width: 100%;
            margin: 10px 0;
        }
        td {
            padding: 8px;
        }
        .detail-label {
            font-weight: bold;
            width: 30%;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h2> clinicName</h2>
        </div>
        
        <div class="content">
            <div class="confirmation-icon">âœ“</div>
            <h3 style="text-align: center;">Appointment Confirmed!</h3>
            
            <div class="appointment-details">
                <h4>Appointment Details</h4>
                <table>
                    <tr>
                        <td class="detail-label">Patient Name:</td>
                        <td><%= patientName %></td>
                    </tr>
                    <tr>
                        <td class="detail-label">Doctor:</td>
                        <td>Dr. <%= doctorName %></td>
                    </tr>
                    <tr>
                        <td class="detail-label">Date:</td>
                        <td><%= appointmentDate %></td>
                    </tr>
                    <% } %>
                </table>
            </div>

            <div class="important-notes">
                <h4>Important Notes:</h4>
                <ul>
                    <% importantNotes.forEach(function(note) { %>
                        <li><%= note %></li>
                    <% }); %>
                </ul>
            </div>

          
        </div>
    </div>
</body>
</html>